{
  "name": "dev-stack-docs",
  "version": "1.0.0",
  "description": "Documentation tooling for dev-stack project (Hugo-based)",
  "private": true,
  "scripts": {
    "lint:md": "markdownlint --config .markdownlint.json README.md docs/",
    "lint:links": "markdown-link-check README.md docs/**/*.md",
    "lint:md:fix": "markdownlint --config .markdownlint.json --fix README.md docs/",
    "docs:build": "hugo --minify --gc",
    "docs:serve": "hugo server --disableFastRender --noHTTPCache",
    "docs:dev": "hugo server --buildDrafts --buildFuture --disableFastRender",
    "docs:clean": "rm -rf public/",
    "docs:setup": "git submodule update --init --recursive",
    "lint:commits": "commitlint --from HEAD~1 --to HEAD --verbose",
    "format": "prettier **/** -w -c"
  },
  "dependencies": {
    "@thulite/doks-core": "^1.8.3",
    "@thulite/images": "^3.3.1",
    "@thulite/inline-svg": "^1.2.0",
    "@thulite/seo": "^2.4.1",
    "@tabler/icons": "^3.34.1",
    "thulite": "^2.6.3"
  },
  "devDependencies": {
    "markdownlint-cli": "^0.45.0",
    "markdown-link-check": "^3.11.2",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "prettier": "^3.6.2",
    "vite": "^7.0.6"
  },
  "keywords": [
    "documentation",
    "markdown",
    "linting",
    "hugo",
    "go"
  ],
  "author": "Isaac Garza",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/isaacgarza/dev-stack.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
